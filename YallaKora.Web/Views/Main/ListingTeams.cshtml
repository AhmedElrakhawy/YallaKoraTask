@using DTOs.ApplicationDtos
@model List<TeamDto>


<div class="col-lg-12" id="tableContainer">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Team Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    WebSite URL
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var Team in Model)
                {
                    <tr>
                        <td>
                            @Team.TeamName
                        </td>
                        <td>
                            @Team.Description
                        </td>
                        <td>
                            @Team.WebSiteURL
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="7">
                        No Results Found..
                    </td>
                </tr>
            }
        </tbody>
    </table>
